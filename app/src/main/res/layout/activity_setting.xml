<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background">

    <android.support.v7.widget.Toolbar
        android:id="@+id/SettingActivity_toolbar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="@dimen/Toolbar_textSize"
            android:textColor="@android:color/white"
            android:layout_gravity="center"/>

    </android.support.v7.widget.Toolbar>
    
    <include
        layout="@layout/center_listview_item_divider"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/SettingActivity_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <include
        layout="@layout/center_listview_item_divider"/>

    <Button
        android:id="@+id/SettingActivity_loginOut"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/LoginActivity_item_padding"
        android:layout_marginRight="@dimen/LoginActivity_item_padding"
        android:layout_height="45dp"
        android:text="退出账号"
        android:textSize="@dimen/LoginActivity_item_textSize"
        android:textColor="@android:color/white"
        android:background="@drawable/loginactivity_button_shape"/>

</LinearLayout>