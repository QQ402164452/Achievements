<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="15dp">

    <RelativeLayout
        android:id="@+id/popup_Warn_ViewGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/popup_Warn_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/net_warn_icon"/>

        <TextView
            android:id="@+id/popup_Warn_title"
            android:layout_toRightOf="@id/popup_Warn_img"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/popup_Warn_ViewGroup"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/popup_Warn_Cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/white"
            android:background="@drawable/green_press_bg"
            android:text="取消"
            style="?attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/popup_Warn_Confirm"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="确认"
            android:background="@drawable/red_press_bg"
            android:textColor="@android:color/white"
            style="?attr/borderlessButtonStyle"/>

    </LinearLayout>





</RelativeLayout>