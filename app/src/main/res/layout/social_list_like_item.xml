<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/SocialDetailActivity_Like_User_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/dayhr_userphoto_def" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">


        <TextView
            android:id="@+id/SocialDetailActivity_Like_User_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="云绩效"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/SocialDetailActivity_Like_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12月25日18:00"
            android:textSize="12sp"/>

    </LinearLayout>

</LinearLayout>