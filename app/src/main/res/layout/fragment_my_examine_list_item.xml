<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    android:padding="@dimen/examine_fragment_item_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/MyExamineFragment_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的假期申请"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/MyExamineFragment_list_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9月19日16:48"
            android:layout_alignParentRight="true"
            android:textSize="13sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/MyExamineFragment_list_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="事假" />

        <TextView
            android:id="@+id/MyExamineFragment_list_item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/list_icon_done_def"
            android:layout_alignParentRight="true"
            android:drawablePadding="5dp"
            android:text="已通过"
            android:textSize="12sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/MyExamineFragment_list_item_beginTime"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始时间:2016/09/09 上午 周五" />

    <TextView
        android:id="@+id/MyExamineFragment_list_item_endTime"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结束时间:2016/09/09 下午 周五" />

    <TextView
        android:id="@+id/MyExamineFragment_list_item_reason"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:text="请假原因:家里有点事" />

</LinearLayout>