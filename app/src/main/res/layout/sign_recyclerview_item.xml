<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/SignActivity_list_item_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sign_content_img_timepoint_def"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/SignActivity_list_item_line"
        android:background="@drawable/sign_list_content_img_background_def">

        <ImageView
            android:id="@+id/SignActivity_list_item_time_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/sign_list_icon_time_def"/>

        <TextView
            android:id="@+id/SignActivity_list_item_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下午 14:36"
            android:layout_alignTop="@id/SignActivity_list_item_time_img"
            android:layout_toRightOf="@id/SignActivity_list_item_time_img"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/SignActivity_list_item_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/SignActivity_list_item_time_img"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/SignActivity_list_item_position_img"
            android:layout_below="@id/SignActivity_list_item_time_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/sign_list_icon_position_def"/>

        <TextView
            android:id="@+id/SignActivity_list_item_position_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广东省广农业大学"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_alignTop="@id/SignActivity_list_item_position_img"
            android:layout_toRightOf="@id/SignActivity_list_item_position_img"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"/>

    </RelativeLayout>


</RelativeLayout>