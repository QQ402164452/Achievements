<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/CheckFragment_popup_single_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:padding="@dimen/EditActivity_popup_padding"
            android:textColor="@color/colorAccent"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/CheckFragment_popup_single_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:padding="@dimen/EditActivity_popup_padding"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorAccent"/>

    </RelativeLayout>

    <com.example.wheelview.WheelView
        android:id="@+id/CheckFragment_popup_single_wheel"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_weight="1">
    </com.example.wheelview.WheelView>

</LinearLayout>