<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/ReportActivity_report_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="@dimen/report_add_padding">

        <ImageView
            android:layout_width="@dimen/report_add_img_size"
            android:layout_height="@dimen/report_add_img_size"
            android:src="@drawable/day_report"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日报"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ReportActivity_report_week"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="@dimen/report_add_padding">

        <ImageView
            android:layout_width="@dimen/report_add_img_size"
            android:layout_height="@dimen/report_add_img_size"
            android:src="@drawable/week_report"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周报"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ReportActivity_report_month"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="@dimen/report_add_padding">

        <ImageView
            android:layout_width="@dimen/report_add_img_size"
            android:layout_height="@dimen/report_add_img_size"
            android:src="@drawable/month_report"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月报"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"/>

    </LinearLayout>



</LinearLayout>