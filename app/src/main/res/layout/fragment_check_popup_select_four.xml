<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/CheckFragment_popup_four_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:padding="@dimen/EditActivity_popup_padding"
            android:textColor="@color/colorAccent"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/CheckFragment_popup_four_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:padding="@dimen/EditActivity_popup_padding"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorAccent"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal">

        <com.example.wheelview.WheelView
            android:id="@+id/CheckFragment_popup_four_wheel_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <com.example.wheelview.WheelView
            android:id="@+id/CheckFragment_popup_four_wheel_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <com.example.wheelview.WheelView
            android:id="@+id/CheckFragment_popup_four_wheel_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <com.example.wheelview.WheelView
            android:id="@+id/CheckFragment_popup_four_wheel_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>



</LinearLayout>