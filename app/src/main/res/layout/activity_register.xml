<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background">

    <android.support.v7.widget.Toolbar
        android:id="@+id/RegisterActivity_toolbar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="@dimen/Toolbar_textSize"
            android:textColor="@android:color/white"
            android:layout_gravity="center"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:showDividers="middle|end|beginning"
        android:divider="@drawable/linearlayout_divider">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/LoginActivity_item_padding">

            <ImageView
                android:id="@+id/RegisterActivity_account_img"
                android:layout_width="@dimen/LoginActivity_img_sizes"
                android:layout_height="@dimen/LoginActivity_img_sizes"
                android:src="@drawable/company_account"
                android:layout_centerVertical="true"/>

            <EditText
                android:id="@+id/RegisterActivity_account_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/LoginActivity_item_padding"
                android:layout_marginRight="@dimen/LoginActivity_item_padding"
                android:layout_toRightOf="@id/RegisterActivity_account_img"
                android:hint="姓名"
                android:background="@null"
                android:maxLength="15"
                android:lines="1"
                android:textSize="@dimen/LoginActivity_item_textSize"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/LoginActivity_item_padding">

            <ImageView
                android:id="@+id/RegisterActivity_phone_img"
                android:layout_width="@dimen/LoginActivity_img_sizes"
                android:layout_height="@dimen/LoginActivity_img_sizes"
                android:src="@drawable/company_phone"
                android:layout_centerVertical="true"/>

            <EditText
                android:id="@+id/RegisterActivity_phone_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/LoginActivity_item_padding"
                android:layout_marginRight="@dimen/LoginActivity_item_padding"
                android:layout_toRightOf="@id/RegisterActivity_phone_img"
                android:hint="请输入手机号码"
                android:background="@null"
                android:maxLength="11"
                android:inputType="phone"
                android:textSize="@dimen/LoginActivity_item_textSize"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/LoginActivity_item_padding">

            <ImageView
                android:id="@+id/RegisterActivity_yzcode_img"
                android:layout_width="@dimen/LoginActivity_img_sizes"
                android:layout_height="@dimen/LoginActivity_img_sizes"
                android:src="@drawable/company_yzcode"
                android:layout_centerVertical="true"/>

            <EditText
                android:id="@+id/RegisterActivity_yzcode_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/LoginActivity_item_padding"
                android:layout_marginRight="@dimen/LoginActivity_item_padding"
                android:layout_toRightOf="@id/RegisterActivity_yzcode_img"
                android:hint="请输入密码"
                android:background="@null"
                android:inputType="textPassword"
                android:maxLength="12"
                android:textSize="@dimen/LoginActivity_item_textSize"/>

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/RegisterActivity_Btn"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/LoginActivity_item_padding"
        android:layout_marginRight="@dimen/LoginActivity_item_padding"
        android:layout_height="45dp"
        android:text="注册"
        android:textSize="@dimen/LoginActivity_item_textSize"
        android:textColor="@android:color/white"
        android:background="@drawable/loginactivity_button_shape"/>

</LinearLayout>