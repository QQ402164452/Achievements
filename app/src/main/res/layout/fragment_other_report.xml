<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <RadioGroup
            android:id="@+id/OtherFragment_radioGroup"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/OtherFragment_btn_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/other_report_left_bg"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/other_report_text_color"
                android:text="日报"
                />

            <RadioButton
                android:id="@+id/OtherFragment_btn_week"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/other_report_center_bg"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/other_report_text_color"
                android:text="周报"
                />

            <RadioButton
                android:id="@+id/OtherFragment_btn_month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/other_report_right_bg"
                android:gravity="center"
                android:textColor="@color/other_report_text_color"
                android:button="@null"
                android:text="月报"
                />
        </RadioGroup>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/OtherFragment_fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>